---
export interface Props {
  label?: string;
  href?: string;
  variant?: 'primary' | 'ghost';
}
const { label = 'Pesan Sekarang via WhatsApp', href = 'https://wa.me/6281234567890', variant = 'primary' } = Astro.props;
const base = 'inline-flex items-center gap-3 rounded-md font-semibold transition';
const styles = variant === 'primary'
  ? base + ' bg-emerald-600 text-white px-4 py-3 shadow'
  : base + ' border border-slate-200 text-slate-700 px-3 py-2';
---
<a class={styles} href={href} rel="noopener noreferrer" target="_blank" aria-label={label}>
  <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" aria-hidden>
    <path d="M21 3 3 21l4-1 1 4 18-18-6-4Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
  <span>{label}</span>
</a>
